<MudNavMenu>
    <div style="display: flex;flex-flow: row nowrap; justify-content: center">
        <img src="icon.ico" alt="RecoverUnsold Admin" style="height: 55px;width: auto">
    </div>

    @foreach (var navItem in NavItems())
    {
        <MudNavLink Href="@navItem.Href" Match="navItem.Match" Icon="@navItem.Icon" IconColor="Color.Surface">
            @navItem.Text
        </MudNavLink>
    }
</MudNavMenu>

@code {

    [Inject]
    private IStringLocalizer<App> StringLocalizer { get; set; } = default!;

    internal record NavItem(string Href, NavLinkMatch Match, string Icon, string Text);

    private NavItem[] NavItems()
    {
        return new NavItem[]
        {
            new("/", NavLinkMatch.All, Icons.Material.Filled.Dashboard, StringLocalizer["Dashboard"]),
            new("/Customers", NavLinkMatch.Prefix, Icons.Material.Filled.People, StringLocalizer["Customers"]),
            new("/Distributors", NavLinkMatch.Prefix, Icons.Material.Filled.Person, StringLocalizer["Distributors"]),
            new("/Offers", NavLinkMatch.Prefix, Icons.Material.Filled.ShoppingBag, StringLocalizer["Offers"]),
            new("/Reports", NavLinkMatch.Prefix, Icons.Material.Filled.Report, StringLocalizer["Reports"]),
            new("/About", NavLinkMatch.Prefix, Icons.Material.Filled.QuestionMark, StringLocalizer["About"])
        };
    }

}