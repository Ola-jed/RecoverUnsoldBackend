@page "/"
@inherits IndexBase

<PageTitle>@StringLocalizer["Dashboard"]</PageTitle>

@if (Loading) {
    <div style="display: flex;flex-direction: column;justify-content: center;align-items: center;text-align: center;min-height: 90vh;">
        <MudProgressCircular Color="Color.Primary" Indeterminate="true"/>
    </div>
} else {
    <div style="display: flex; flex-flow: row wrap; justify-content: space-between">
        <MudCard Outlined="true" Style="flex: 1; margin: 1rem;">
            <MudCardHeader>
                <MudIcon Icon="@Icons.Filled.People" Class="mr-3"/>
                <MudText Typo="Typo.h6">@StringLocalizer["Customers"]</MudText>
            </MudCardHeader>
            <MudCardContent>
                <MudText Typo="Typo.h5" Align="Align.End">
                    @Stats?.CustomersCount
                </MudText>
            </MudCardContent>
        </MudCard>
        <MudCard Outlined="true" Style="flex: 1; margin: 1rem;">
            <MudCardHeader>
                <MudIcon Icon="@Icons.Filled.Person" Class="mr-3"/>
                <MudText Typo="Typo.h6">@StringLocalizer["Distributors"]</MudText>
            </MudCardHeader>
            <MudCardContent>
                <MudText Typo="Typo.h5" Align="Align.End">
                    @Stats?.DistributorsCount
                </MudText>
            </MudCardContent>
        </MudCard>
        <MudCard Outlined="true" Style="flex: 1; margin: 1rem;">
            <MudCardHeader>
                <MudIcon Icon="@Icons.Filled.ShoppingBag" Class="mr-3"/>
                <MudText Typo="Typo.h6">@StringLocalizer["Offers"]</MudText>
            </MudCardHeader>
            <MudCardContent>
                <MudText Typo="Typo.h5" Align="Align.End">
                    @Stats?.OffersCount
                </MudText>
            </MudCardContent>
        </MudCard>
    </div>

    <div style="display: flex; flex-flow: row wrap; justify-content: space-between">
        <MudCard Outlined="true" Style="flex: 1; margin: 1rem;">
            <MudCardHeader>
                <MudIcon Icon="@Icons.Filled.ShoppingCart" Class="mr-3"/>
                <MudText Typo="Typo.h6">@StringLocalizer["Orders"]</MudText>
            </MudCardHeader>
            <MudCardContent>
                <MudText Typo="Typo.h5" Align="Align.End">
                    @Stats?.OrdersCount
                </MudText>
            </MudCardContent>
        </MudCard>
        <MudCard Outlined="true" Style="flex: 1; margin: 1rem;">
            <MudCardHeader>
                <MudIcon Icon="@Icons.Filled.ShoppingCart" Class="mr-3"/>
                <MudText Typo="Typo.h6">@StringLocalizer["FinalizedOrders"]</MudText>
            </MudCardHeader>
            <MudCardContent>
                <MudText Typo="Typo.h5" Align="Align.End">
                    @Stats?.FinalizedOrdersCount
                </MudText>
            </MudCardContent>
        </MudCard>
        <MudCard Outlined="true" Style="flex: 1; margin: 1rem;">
            <MudCardHeader>
                <MudIcon Icon="@Icons.Filled.ShoppingCartCheckout" Class="mr-3"/>
                <MudText Typo="Typo.h6">@StringLocalizer["TotalSales"]</MudText>
            </MudCardHeader>
            <MudCardContent>
                <MudText Typo="Typo.h5" Align="Align.End">
                    @Stats?.TotalSales
                </MudText>
            </MudCardContent>
        </MudCard>
    </div>

    @if (Series.Count > 0) {
        <MudChart ChartType="ChartType.Line" ChartSeries="Series" XAxisLabels="Labels" Width="100%"
                  Height="300px" ChartOptions="Options"/>
    }
}